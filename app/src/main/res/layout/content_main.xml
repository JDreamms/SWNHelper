<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Spinner
        android:id="@+id/spin_Ethnicity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spin_Ethnicity"
        app:layout_constraintTop_toTopOf="@+id/spin_Ethnicity">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_NameDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name + age" />

            <TextView
                android:id="@+id/txt_Fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name" />

            <TextView
                android:id="@+id/txt_Lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name  " />

            <TextView
                android:id="@+id/txt_Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_DescP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Info:" />

            <TextView
                android:id="@+id/txt_Personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Info here" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_BackgroundDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background:" />

            <TextView
                android:id="@+id/txt_Background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background here" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_RISDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role in Society:" />

            <TextView
                android:id="@+id/txt_RIS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="role in society" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_PProbdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Problem:" />

            <TextView
                android:id="@+id/txt_PProb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Problem" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txt_DesireDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desire(s):" />

            <TextView
                android:id="@+id/txt_Desire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desire" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txt_TraitDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trait(s)" />

            <TextView
                android:id="@+id/txt_Traits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trait" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</android.support.constraint.ConstraintLayout>